{
  "expo": {
    "name": "Truck Tracker",
    "slug": "truck-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "https://via.placeholder.com/1024x1024/3498db/ffffff?text=TT",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "https://via.placeholder.com/1242x2436/3498db/ffffff?text=Truck+Tracker",
      "resizeMode": "contain",
      "backgroundColor": "#f0f8ff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "platforms": ["ios", "android"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.trucktracker",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to take photos of trucks.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select truck images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "https://via.placeholder.com/1024x1024/3498db/ffffff?text=TT",
        "backgroundColor": "#f0f8ff"
      },
      "package": "com.yourcompany.trucktracker",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    }
  }
}